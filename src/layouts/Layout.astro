---
import Navbar from "../components/Navbar.astro"
import { SEO } from "astro-seo"
import { Spa } from "astro-spa"
interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="https://cdn.exerra.xyz/png/pfp.png" />
		<meta name="generator" content={Astro.generator} />
		<link rel="manifest" href="/manifest.json" />
		<title>{title}</title>

		<SEO
				title={title}
				description={description}
				twitter={{
					creator: "@Exerra",
					card: "summary_large_image"
				}}
				openGraph={{
					basic: {
						title: title,
						image: "/og.png",
						type: ""
					},
					optional: {
						description: description,
					},
					image: {
						alt: "Exerra Tools"
					}
				}}
				extend={{
					link: [{ rel: "icon", href: "https://cdn.exerra.xyz/png/pfp.png" }],
					meta: [
						{ name: "theme-color", content: "#FFFFFF" }
					]
				}}
		/>
	</head>
	<body class="min-h-screen bg-white font-sans text-slate-900 antialiased">
		<Navbar />
		<main>
			<slot />
		</main>
		<footer class="p-10 text-center">
			<p class="inline-flex gap-1 align-middle">
				Made by <a href="https://exerra.xyz" class="font-bold" target="_blank" rel="noreferrer">Exerra</a> <img alt="Exerra's profile picture" height="24" width="24" class="inline-flex h-6 w-6" src="https://cdn.exerra.xyz/png/pfp.png">
			</p>
		</footer>


		<!--TODO: Fix https://github.com/Exerra/tools/issues/3-->
		<Spa defaultAnimation={false} containerSelector={"main"} />
	</body>
</html>
<style is:global>
	html {
		font-family: Inter, sans-serif;
	}
</style>