---
type Props = {
	title: string;
}

const { title } = Astro.props

---


<div class="my-5">
	<h2 class="text-2xl font-extrabold leading-tight tracking-tighter sm:text-2xl md:text-4xl lg:text-5xl">
		{title}
	</h2>

	<!--<hr class="mt-2" />-->

	<div class="grid lg:grid-cols-2 flex-wrap gap-3 lg:gap-6 mt-5">
		<slot />
	</div>
</div>